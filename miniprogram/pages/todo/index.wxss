.container {
  padding: 24rpx 32rpx 0;
}

.add-box {
  position: fixed;
  bottom: 70rpx;
  right: 70rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
}
.icon-add {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
}
.icon-add::before,
.icon-add::after {
  content: '';
  display: block;
  width: 40%;
  height: 4rpx;
  background-color: #fff;
  position: absolute;
  left: 30%;
  top: calc(50% - 2rpx);
}
.icon-add::after {
  transform: rotate(90deg);
}

.item {
  padding: 32rpx 16rpx;
  word-break: break-all;
}
.item .radio {
  zoom: .8;
  vertical-align: middle;
  margin-right: 16rpx;
}
.item .content {
  vertical-align: middle;
}